<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoons.EPIC.ManualDeviceAddingActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="563dp"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|center">

        <TextView
            android:id="@+id/testChangeEditText"
            android:layout_width="239dp"
            android:layout_height="61dp"
            android:layout_marginBottom="264dp"
            android:layout_weight="1"
            android:text="TestChange"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_anchor="@+id/include"
            app:layout_anchorGravity="top|center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/changeOne"
            android:layout_width="88dp"
            android:layout_height="52dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="88dp"
            android:text="Juan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testChangeEditText" />

        <Button
            android:id="@+id/changeTwo"
            android:layout_width="88dp"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="212dp"
            android:layout_marginTop="88dp"
            android:text="Tuu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testChangeEditText" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteY="2dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_manual_device_adding" />



</android.support.design.widget.CoordinatorLayout>
